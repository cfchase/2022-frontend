{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": ".eslintrc.js",
  "scripts": {
    "build": "yarn run-s 'build:*'",
    "build:codegen": "yarn graphql:codegen --project backend",
    "build:tsc": "tsc",
    "dev": "yarn run-p 'dev:*'",
    "dev:codegen": "yarn build:codegen --watch",
    "dev:start": "NODE_ENV=dev CLUSTER_NAME='Local Dev' LOG_LEVEL=trace nodemon -e ts,js -x ts-node src/index.ts | pino-pretty -t",
    "lint": "eslint 'src/**/*.ts'",
    "test": "ts-node node_modules/tape/bin/tape test/*.test.ts test/**/*.test.ts",
    "start": "node build/index.js"
  },
  "keywords": [],
  "author": "Evan Shortiss <evanshortiss@gmail.com> (https://evanshortiss.com)",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"**/*.ts\""
    }
  },
  "engines": {
    "node": ">=16.12"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.2",
    "@graphql-tools/schema": "^8.3.1",
    "@graphql-tools/utils": "^8.6.1",
    "ajv": "^8.10.0",
    "delay": "^5.0.0",
    "env-var": "^7.1.1",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "graphql-modules": "^2.0.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.6.0",
    "humanize-duration": "^3.27.1",
    "lodash": "^4.17.21",
    "make-promises-safe": "^5.1.0",
    "nanoid": "^3.2.0",
    "pino": "^7.6.5",
    "reflect-metadata": "^0.1.13",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "@types/humanize-duration": "^3.27.1",
    "@types/lodash": "^4.14.179",
    "@types/node": "^16.0.0",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.8.0",
    "husky": "~4.3.6",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.x",
    "pino-pretty": "~4.3.0",
    "prettier": "~2.2.1",
    "pretty-quick": "~3.1.0",
    "ts-node": "^10.5.0",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.5.5"
  }
}
